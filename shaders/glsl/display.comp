#version 450

layout(local_size_x = 16, local_size_y = 16, local_size_z = 1) in;

layout(set = 0, binding = 0, r32ui) uniform uimage2D depth;
layout(set = 0, binding = 1, rgba8) uniform image2D color;

void main()
{
    float d = float(imageLoad(depth, ivec2(gl_GlobalInvocationID.xy))) / float(0xFFFFFFFFu);
    imageStore(color, ivec2(gl_GlobalInvocationID.xy), vec4(d));
}
